<?xml version="1.0"?>
<project name="Picode PDE" default="picode-zip">
  <import file="build-core.xml" />
  <import file="build.xml" />

	<!-- Make zip -->
	<target name="picode-zip" depends="build, picode-jar, picode-javadoc">
        <zip destfile="picode-ide.zip">
        	<zipfileset dir="./" includes="*.txt picode.* picode-x86.*" excludes="settings.txt" />
        	<zipfileset dir="./" includes="poses/*.txt poses/*.jpg" />
        	<zipfileset dir="./" includes="kinect/**/*" />
        	<zipfileset dir="./" includes="processing/**/*" />
        	<zipfileset dir="./" includes="lib/**/*" />
        	<zipfileset dir="./" includes="projects/**/*" />
        	<zipfileset dir="./" includes="docs/**/*" />
       	</zip>
	</target>
	
	<target name="picode-clean-all" depends="picode-clean, clean">
		<delete file="picode-ide.zip" />
	</target>
</project>
